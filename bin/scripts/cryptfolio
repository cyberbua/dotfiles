#!/bin/python

import requests, json, sys
from texttable import Texttable

class Coin:
    amount = 0
    def __init__(self, data, amount):
        self.__dict__ = data
        self.amount = amount

    def holdings(self):
        return float(self.amount) * float(self.price_eur)

def green(text):
    return '\033[0;32m' + text +'\033[0m'

def red(text):
    return '\033[0;31m' + text + '\033[0m'

if __name__ == '__main__':

    coins = []
    data = json.loads(requests.get('https://api.coinmarketcap.com/v1/ticker/?convert=EUR&limit=150').text)
    for arg in sys.argv[1:]:
        coins.append(Coin([coin for coin in data if coin['symbol'] == arg.split(':')[0] or coin['id'] == arg.split(':')[0]][0], arg.split(':')[1]))

    table = Texttable(100)
    table.set_deco(Texttable.VLINES | Texttable.BORDER | Texttable.HEADER)
    table.set_precision(2)
    table.header(['Coin', 'HODL', 'USD', 'EUR', '7d%', '24h%', '1h%', 'HODL EUR', 'HODL %'])
    table.set_cols_dtype(['t', 't', 'f', 'f', 'f', 'f', 'f', 'f', 'f'])
    table.set_cols_align(['l', 'r', 'r', 'r', 'r', 'r', 'r', 'r', 'r'])
    table.set_chars(['-', '|', '+', '-'])

    sum = 0
    for coin in coins:
        sum += coin.holdings()

    for coin in coins:
        table.add_row([coin.symbol, coin.amount, coin.price_usd, coin.price_eur, coin.percent_change_7d, coin.percent_change_24h, coin.percent_change_1h, coin.holdings(), coin.holdings()/sum*100])

    holdings_change_7d = 0
    holdings_change_24h = 0
    holdings_change_1h = 0
    for coin in coins:
        holdings_change_7d += (coin.holdings()/sum) * float(coin.percent_change_7d)
        holdings_change_24h += (coin.holdings()/sum) * float(coin.percent_change_24h)
        holdings_change_1h += (coin.holdings()/sum) * float(coin.percent_change_1h)

    if len(coins) > 1:
        table.add_row(["total", "", "", "", holdings_change_7d, holdings_change_24h, holdings_change_1h, sum, ""])

    print(table.draw())


