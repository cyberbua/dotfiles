[colors]
background = #2F343F
background-alt = #3A404D
foreground-alt = #616B82
primary = #ffb52a
foreground = #dfdfdf
secondary = #e60053
alert = #bd2c40

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
width = 100%
height = 24
offset-x = 0
offset-y = 0

; hide when fullscreen
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00

spacing = 0
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = RobotoMonoNerdFont:weight=medium:size=10;2
font-1 = MaterialIcons:size=12;4

modules-left = bspwm i3 backlight volume bitcoin
modules-center = date time updates
modules-right = filesystem battery memory cpu temperature network

tray-position = right
tray-padding = 2


[module/bitcoin]
type = custom/script
interval = 3600
format = <label>
format-prefix = " "
tail = true
exec = ~/.config/polybar/bitcoin.py


[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 45


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix = " "
label-mounted = %used%


[module/bspwm]
type = internal/bspwm
ws-icon-default = x
enable-scroll = false

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1


[module/i3]
type = internal/i3
label-mode = %mode%
label-mode-background = #e60000

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1


[module/updates]
type = custom/script
exec = ~/.config/polybar/updates.sh
interval = 5
click-left = ~/.config/polybar/updates.sh now
format-prefix = " "
label = %output:0:3%


[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
ramp-0 = " "
ramp-1 = " "
ramp-2 = " "


[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "


[module/memory]
type = internal/memory
interval = 1
format-prefix = " "
label = %gb_used%


[module/network]
type = internal/network
interface = wlp2s0
interval = 1.0
format-connected = <label-connected>
format-packetloss-underline = #ff0000
label-connected = "%downspeed% %upspeed% %local_ip%"


[module/date]
type = internal/date
interval = 5
date = "%a %d.%m"
format-prefix = " "
label = %date%


[module/time]
type = internal/date
interval = 3
time = %H:%M
format-prefix = " "
label = %time%


[module/volume]
type = internal/volume
format-volume-prefix = " "
format-muted-prefix = " "


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
; never be full:
full-at = 101

format-discharging = <ramp-capacity> <label-discharging>
format-charging = <label-charging>
format-charging-prefix = " "
format-full = <label-full>
format-full-prefix = " "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 75
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

