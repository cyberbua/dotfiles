;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #2F343F
background-alt = #3A404D
foreground-alt = #616B82
primary = #ffb52a
foreground = #dfdfdf
secondary = #e60053
alert = #bd2c40

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
width = 100%
height = 24
offset-x = 0
offset-y = 0

; hide when fullscreen
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00

spacing = 0
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = RobotoMono:size=10;2
font-1 = MaterialIcons:size=12;4

modules-left = bspwm i3
modules-center = date time updates
modules-right = backlight volume filesystem memory cpu battery temperature network

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 45

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted-prefix = " "
label-mounted = %used%

[module/bspwm]
type = internal/bspwm
ws-icon-default = x
enable-scroll = false

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/i3]
type = internal/i3
label-mode = %mode%
label-mode-background = #e60053

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/updates]
type = custom/script
exec = ~/.config/polybar/updates.sh
interval = 5
click-left = ~/.config/polybar/updates.sh now
format-prefix = " "
label = %output:0:3%

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
ramp-0 = " "
ramp-1 = " "
ramp-2 = " "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %gb_used%

[module/network]
type = internal/network
interface = wlp2s0
interval = 2.0
format-connected = <label-connected>
format-connected-prefix = " "
format-packetloss-underline = #ff0000
label-connected = "%local_ip%"
; label-connected = "%downspeed% %upspeed% %local_ip%"

[module/date]
type = internal/date
interval = 5
date = "%a %d.%m"
format-prefix = " "
label = %date%

[module/time]
type = internal/date
interval = 3
time = %H:%M
format-prefix = " "
label = %time%

[module/volume]
type = internal/volume
format-volume-prefix = " "
format-muted-prefix = " "

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
; never be full:
full-at = 101
format-charging-prefix = " "
format-full-prefix = " "
format-discharging-prefix = " "

[module/temperature]
type = internal/temperature
thermal-zone = 1
warn-temperature = 80

format-prefix = " "
format-warn-prefix = " "

format = <label>
format-warn = <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

; vim:ft=dosini
