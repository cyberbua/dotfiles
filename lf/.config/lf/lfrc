# options
set info size
set dircounts
set tabstop 4
set incsearch
set incfilter
set period 1
set scrolloff 4
set timefmt '2006-01-02 15:04:05'
set shellopts '-eu'  # fail safely
set ifs "\n"         # make split filenames correctly

# bindings
map D delete
map <f-5> reload
map <esc> clear
map f filter
map E $$EDITOR $fx

map P paste
map p :paste; clear

cmap <tab> cmd-menu-complete
cmap <backtab> cmd-menu-complete-back
cmap <up> cmd-history-prev
cmap <down> cmd-history-next

map gr cd /
map gt cd /tmp
map gm cd /run/media
map gd cd ~/Downloads

cmd open-with %"$@" $fx
map o push :open-with<space>

cmd mkdir %IFS=" "; mkdir -p -- "$*"
map M push :mkdir<space>

# like ! (shell-wait) but append $fx
map @ push !<space>$fx<c-a>

# rename, but place the cursor before the extension
map R push r<a-b><c-b>

map U %du -sch $fx

# extras
set previewer ~/.config/lf/pv.sh
map i $~/.config/lf/pv.sh "$f" 200 0 | less -R
