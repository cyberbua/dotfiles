# options
set info size
set tabstop 4
set dircounts
set incsearch
set period 1
set scrolloff 3

set previewer ~/.config/lf/pv.sh
map i $~/.config/lf/pv.sh $f 200 0 | less -R

# bindings
map D delete
map <f-5> reload
map <esc> clear

cmd open-with %"$@" $fx
map o push :open-with<space>

cmd mkdir %IFS=" "; mkdir -p -- "$*"
map M push :mkdir<space>
